generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model Attendance {
  id                    String        @id @default(uuid())
  staffId               String        @map("staff_id")
  clockIn               DateTime      @map("clock_in")
  clockOut              DateTime?     @map("clock_out")
  clockInPhotoUrl       String?       @map("clock_in_photo_url") @db.Text
  clockInPhotoKey       String?       @map("clock_in_photo_key") @db.VarChar(256)
  clockInUploadStatus   UploadStatus  @default(PENDING) @map("clock_in_upload_status")
  clockOutPhotoUrl      String?       @map("clock_out_photo_url") @db.Text
  clockOutPhotoKey      String?       @map("clock_out_photo_key") @db.VarChar(256)
  clockOutUploadStatus  UploadStatus? @map("clock_out_upload_status")
  ipAddress             String?       @map("ip_address") @db.VarChar(45)
  userAgent             String?       @map("user_agent") @db.VarChar(512)
  notes                 String?       @db.Text
  createdAt             DateTime      @default(now()) @map("created_at")
  updatedAt             DateTime      @updatedAt @map("updated_at")

  @@index([staffId])
  @@index([clockIn])
  @@map("attendances")
}

enum UploadStatus {
  PENDING
  UPLOADING
  COMPLETED
  FAILED
}

